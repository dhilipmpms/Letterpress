{
    "id": "io.gitlab.gregorni.Letterpress",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "letterpress",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "build-aux/blueprint-compiler.json",
        {
            "name": "artem",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "tar -xf *.tar.gz",
                "install -Dm755 artem -t /app/bin"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.6/artem-v2.0.6-aarch64-unknown-linux-gnu.tar.gz",
                    "sha256": "f7e54a1d5788b8a8d2889b624b020a6c790aa065fd3eaee6d141ac99e0605237",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.6/artem-v2.0.6-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "70e19367d6ac8c2077a09dc362d4b11e6f26891265c53c35ee9d491d4d6a9945",
                    "only-arches": [
                        "x86_64"
                    ]
                }
            ]
        },
        {
            "name": "python-pillow",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/python-pillow/Pillow",
                    "tag": "10.2.0",
                    "commit": "6956d0b2853f5c7ec5f6ec4c60725c5a7ee73aeb"
                }
            ]
        },
        {
            "name": "letterpress",
            "builddir": true,
            "buildsystem": "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}

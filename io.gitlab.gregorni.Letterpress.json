{
    "id": "io.gitlab.gregorni.Letterpress",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "letterpress",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "build-aux/blueprint-compiler.json",
        {
            "name": "artem",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "tar -xf *.tar.gz",
                "install -Dm755 artem -t /app/bin"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.2/artem-v2.0.2-aarch64-unknown-linux-gnu.tar.gz",
                    "sha256": "306c66b48c85877e8ea3f2cacc6676077c3e4ea214c2520b2cef3799b08f9e04",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.2/artem-v2.0.2-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "9764fea8523812900eb9c7e9aba042377da45b762ee84ad8cac9bcb700f806b9",
                    "only-arches": [
                        "x86_64"
                    ]
                }
            ]
        },
        {
            "name": "python-pillow",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/python-pillow/Pillow",
                    "tag": "10.2.0",
                    "commit": "6956d0b2853f5c7ec5f6ec4c60725c5a7ee73aeb"
                }
            ]
        },
        {
            "name": "letterpress",
            "builddir": true,
            "buildsystem": "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}

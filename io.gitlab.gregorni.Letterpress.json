{
    "id": "io.gitlab.gregorni.Letterpress",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "letterpress",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "build-aux/blueprint-compiler.json",
        {
            "name": "jp2a",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Talinx/jp2a.git",
                    "commit": "988ec7c519ed4b439c13358726559e53ebbdaf3c"
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "python-pillow",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/python-pillow/Pillow",
                    "tag": "10.2.0",
                    "commit": "6956d0b2853f5c7ec5f6ec4c60725c5a7ee73aeb"
                }
            ]
        },
        {
            "name": "letterpress",
            "builddir": true,
            "buildsystem": "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}

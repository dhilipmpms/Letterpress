{
    "app-id" : "io.gitlab.gregorni.ASCIIImages",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "letterpress",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"build-aux/blueprint-compiler.json",
       {
            "name": "artem",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "tar -xf *.tar.gz",
                "install -Dm755 artem -t /app/bin"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.0/artem-v2.0.0-aarch64-unknown-linux-gnu.tar.gz",
                    "sha256": "902a061f912d506877f7075ed480aca5b433fa95dfa6d58990bf3e49ede29f86",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.0/artem-v2.0.0-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "2b3c93ed626403393a5d4079986407bda3628a370c9c73032c72a9eedaa87e44",
                    "only-arches": [
                        "x86_64"
                    ]
                }
            ]
        },
        {
    	    "name": "Pillow",
	    "buildsystem": "simple",
	    "build-commands": [
		"pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"Pillow\" --no-build-isolation"
	    ],
	    "sources": [
		{
		    "type": "file",
		    "url": "https://files.pythonhosted.org/packages/00/d5/4903f310765e0ff2b8e91ffe55031ac6af77d982f0156061e20a4d1a8b2d/Pillow-9.5.0.tar.gz",
		    "sha256": "bf548479d336726d7a0eceb6e767e179fbde37833ae42794602631a070d630f1"
		}
	    ]
	},
        {
            "name" : "letterpress",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}

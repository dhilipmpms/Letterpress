{
    "app-id" : "io.gitlab.gregorni.ASCIIImages",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "asciiimages",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"build-aux/blueprint-compiler.json",
        {
            "name" : "jp2a",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Talinx/jp2a.git",
                    "commit" : "988ec7c519ed4b439c13358726559e53ebbdaf3c"
                },
                {
                    "type" : "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "asciiimages",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}

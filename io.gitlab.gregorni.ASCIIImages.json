{
    "app-id" : "io.gitlab.gregorni.ASCIIImages",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "letterpress",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"build-aux/blueprint-compiler.json",
       {
            "name": "artem",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "tar -xf *.tar.gz",
                "install -Dm755 artem -t /app/bin"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.0/artem-v2.0.0-aarch64-unknown-linux-gnu.tar.gz",
                    "sha256": "902a061f912d506877f7075ed480aca5b433fa95dfa6d58990bf3e49ede29f86",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "file",
                    "url": "https://github.com/FineFindus/artem/releases/download/v2.0.0/artem-v2.0.0-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "2b3c93ed626403393a5d4079986407bda3628a370c9c73032c72a9eedaa87e44",
                    "only-arches": [
                        "x86_64"
                    ]
                }
            ]
        },
        {
	    "name": "python-pillow",
	    "buildsystem": "simple",
	    "build-commands": [
	    	"python3 setup.py install --prefix=/app --root=/"
	    ],
	    "sources": [
	      	{
	            "type": "git",
	            "url": "https://github.com/python-pillow/Pillow",
	            "tag": "10.0.0",
	            "commit": "6e28ed1f36d0eb74053af54e1eddc9c29db698cd"
	      	}
	    ]
        },
        {
            "name" : "letterpress",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}

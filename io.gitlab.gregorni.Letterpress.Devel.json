{
    "id" : "io.gitlab.gregorni.Letterpress.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "letterpress",
    "tags" : [
        "nightly"
    ],
    "desktop-file-name-suffix" : " ðŸš§",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "build-aux/blueprint-compiler.json",
        "build-aux/artem.json",
        {
            "name" : "python-pillow",
            "buildsystem" : "simple",
            "build-commands" : [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/python-pillow/Pillow",
                    "tag" : "11.1.0",
                    "commit" : "4c1aed801e43c6b307e7135279ca1dbc02bbf052"
                }
            ]
        },
        {
            "name" : "letterpress",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests" : true,
            "config-opts" : [
                "-Dprofile=development",
                "--libdir=lib"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}

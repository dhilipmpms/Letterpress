{
    "id": "io.gitlab.gregorni.Letterpress.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "letterpress",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Development)",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "build-aux/blueprint-compiler.json",
        {
            "name": "jp2a",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Talinx/jp2a.git",
                    "tag": "v1.2.0"
                }
            ]
        },
        {
            "name": "python-pillow",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/python-pillow/Pillow",
                    "tag": "10.3.0",
                    "commit": "5c89d88eee199ba53f64581ea39b6a1bc52feb1a"
                }
            ]
        },
        {
            "name": "letterpress",
            "builddir": true,
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
